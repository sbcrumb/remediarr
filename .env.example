########################################
# Remediarr Configuration (.env)
########################################

# ====== Web server ======
APP_HOST=0.0.0.0
APP_PORT=8189

# Logging level: INFO (default), DEBUG, WARNING
LOG_LEVEL=INFO

# ====== Webhook Security ======
# Optional shared secret from Jellyseerr (sent as X-Jellyseerr-Signature)
WEBHOOK_SHARED_SECRET=
# Or a custom header + value (optional)
WEBHOOK_HEADER_NAME=X-Jellyseerr-Token
WEBHOOK_HEADER_VALUE=

# ====== Jellyseerr ======
JELLYSEERR_URL=http://jellyseerr:5055
JELLYSEERR_API_KEY=

# Comment prefix for all bot actions (default: [Remediarr])
JELLYSEERR_BOT_COMMENT_PREFIX=[Remediarr]

# Auto-close issues after remediation?
# true/false
JELLYSEERR_CLOSE_ISSUES=true

# Optional message when auto-closing (leave empty for silent close)
JELLYSEERR_CLOSE_MESSAGE=[Remediarr] Issue auto-closed after remediation. If anything’s still off, comment and I’ll take another pass.

# Coaching mode: if no keywords matched, add a tip comment
JELLYSEERR_COACH_REPORTERS=true

# Comment on action taken (delete/search/etc)
JELLYSEERR_COMMENT_ON_ACTION=true

# Cooldown (seconds) to prevent loops when bot comments trigger webhooks
REMEDIARR_ISSUE_COOLDOWN_SEC=90


# ====== Sonarr & Radarr ======
SONARR_URL=http://sonarr:8989
SONARR_API_KEY=

RADARR_URL=http://radarr:7878
RADARR_API_KEY=

# ====== TMDB (for movies only) ======
TMDB_API_KEY=
# Prefer Radarr’s release date instead of TMDB?
PREFER_RADARR_RELEASE_DATE=false
# Only search “wrong movie” if digital release exists?
SEARCH_ONLY_IF_DIGITAL_RELEASE=true

# ====== Keywords ======
# TV keywords
TV_AUDIO_KEYWORDS=no audio,no sound,missing audio,audio issue
TV_VIDEO_KEYWORDS=no video,video glitch,black screen,stutter,pixelation
TV_SUBTITLE_KEYWORDS=missing subs,no subtitles,bad subtitles,wrong subs,subs out of sync
TV_OTHER_KEYWORDS=buffering,playback error,corrupt file

# Movie keywords
MOVIE_AUDIO_KEYWORDS=no audio,no sound,audio issue
MOVIE_VIDEO_KEYWORDS=no video,video missing,bad video,broken video,black screen
MOVIE_SUBTITLE_KEYWORDS=missing subs,no subtitles,bad subtitles,wrong subs,subs out of sync
MOVIE_OTHER_KEYWORDS=buffering,playback error,corrupt file
MOVIE_WRONG_KEYWORDS=not the right movie,wrong movie,incorrect movie

# ====== Behavior ======
# Blocklist last bad file before retry?
ENABLE_BLOCKLIST=true

# ====== Notifications ======
# Gotify
GOTIFY_URL=
GOTIFY_TOKEN=
GOTIFY_PRIORITY=5

# Apprise (Discord, Telegram, Slack, etc.)
APPRISE_URL=
